# Inicializa el lector RFID
lector = mfrc522.MFRC522(
    board.SCK,  # Pin SCK
    board.MOSI,  # Pin MOSI
    board.MISO,  # Pin MISO
    board.IO4,   # Pin RST
    board.IO5,   # Pin SDA
)
lector.set_antenna_gain(0x07 << 4)

# UID autorizado
authorized_uid = [0x13, 0x28, 0x6a, 0x30]

# Bandera para controlar la obtenciÃ³n de datos de pH
fetch_ph_data = False

